<script>


    $('#login').click(function () {


        var username = $('#username').val();
        var password = $('#password').val();

        var student = $('#student').is(':checked');
        var teacher = $('#teacher').is(':checked');


          if (username == "" || password == "") {
                alert("Please write your LRN/EMAIL AND PASSWORD");
                return false;
            }

        var userType = "";
        if (student) {

               if(!/^[0-9]+$/.test(username)){
                   alert("Please only enter numeric characters only for your LRN number (Allowed input:0-9)");
                   return false;
            }
            userType = "student";
        }

    

        if (teacher) {
            

               userType = "teacher";
        }

        $.ajax({

            url: '/Login/ExecuteLogin',
            type: 'POST',
            data: {userType : userType, userName:username, password:password},
            success: function (e    ) {
                alert(e);

                if (e == "error") {
                    alert("Error");
                } else {
                    alert("success");
                }

            }


        });


    });


</script>