
@{
    ViewData["Title"] = "Student";
    Layout = "~/Views/Shared/adminLayout.cshtml";
}

<script>
    var username = sessionStorage.getItem("username");

    var t = "";
     $('#tbody').html('');
    $.ajax({
        url: '/Schedule/GetSchedule',
        type: 'GET',
        data:{ username: username },
        success: function (e) {

         
            for (var key in Object.keys(e)) {
                t += '<tr>';
                t += '<td>'+e[key].schedule.subjectName+'</td>';
                t += '<td>'+e[key].schedule.startTime.toString().substring(11,16)+' - '+e[key].schedule.endTime.toString().substring(11,16)+'</td>';
                t += '<td>'+e[key].schedule.grade+' -'+e[key].schedule.sectionName+'   </td>';
                t += '<td>'+e[key].teacher.firstName+' '+e[key].teacher.middleName+' '+e[key].teacher.lastName+'</td>';
                t += '</tr>';
            }
            $('#tbody').append(t);



        }


    });



</script>



<div style="width: 100%; " class="content">
    <div class="row">
        <div class="col-md-12">

            <br />

            <div style="padding:2%;" class="card">
             
                <table class="table table-striped table-bordered" style=" width:100%;" id="schedList">
                    <thead>
                        <tr>
                            <th style="color:#51cbce;">Subject</th>
                            <th style="color:#51cbce;">Schedule</th>
                            <th style="color:#51cbce;">Grade / Section</th>
                            <th style="color:#51cbce;">Adviser</th>
                        </tr>
                    </thead>
                    <tbody id="tbody">
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>




