@model List<Student>
@{
    ViewData["Title"] = "Student";
    Layout = "~/Views/Shared/adminLayout.cshtml";
}



<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form id="studentRegistration" enctype="multipart/form-data">
                <div class="modal-header">

                    <button class="btn" type="button" data-dismiss="modal" aria-hidden="true">Close</button>
                </div>
                <div class="modal-body">

                    <div class="form-group">
                        <label>LRN</label>
                        <input id="lrn" type="text" class="form-control" />
                        <small id="lrn_v" style="color:red;"></small>
                    </div>

                    <div class="form-group">
                        <label>Password</label>
                        <input id="password" type="text" class="form-control" />
                        <small id="password_v" style="color:red;"></small>
                    </div>


                    <div class="form-group">
                        <label>Repeat Password</label>
                        <input id="rpassword" type="text" class="form-control" />
                        <small id="rpassword_v" style="color:red;"></small>
                    </div>

                    <div class="form-group">
                        <label>First Name</label>
                        <input id="fname" type="text" class="form-control" />
                        <small id="fname_v" style="color:red;"></small>
                    </div>

                    <div class="form-group">
                        <label>Middle Name</label>
                        <input id="mname" type="text" class="form-control" />
                        <small id="mname_v" style="color:red;"></small>
                    </div>

                    <div class="form-group">
                        <label>Last Name</label>
                        <input id="lname" type="text" class="form-control" />
                        <small id="lname_v" style="color:red;"></small>
                    </div>

                    <div class="form-group">
                        <label>Address</label>
                        <input id="address" type="text" class="form-control" />
                        <small id="address_v" style="color:red;"></small>
                    </div>

                    <div class="form-group">
                        <label>Birthdate</label>
                        <input id="bdate" type="date" class="form-control" />
                        <small id="bdate_v" style="color:red;"></small>
                    </div>

                    <div class="form-group">
                        <label>Grade</label>
                        <select class="form-control" id="grade">
                            <option>7</option>
                            <option>8</option>
                            <option>9</option>
                            <option>10</option>
                        </select>
                    </div>

                    <div class="form-group">
                        <label>Gender</label>
                        <br />
                        <input type="radio" id="genderMale" value="Male" />
                        <label>Male</label>
                        <input type="radio" id="genderFemale" value="Female" />
                        <label>Female</label>
                        <small style="color:red;"></small>
                    </div>

                    <label>Student Image</label>
                    <input class="form-control" id="image" type="file" />
                    <small id="image_v" style="color:red;"></small>
                    <div class="form-group">



                    </div>

                </div>
                <div class="modal-footer">
                    <div class="left-side">
                        <button type="button" class="btn btn-default btn-simple" data-dismiss="modal">Cancel</button>
                    </div>
                    <div class="divider"></div>
                    <div class="right-side">
                        <input id="register_student" type="submit" class="btn btn-danger btn-simple" />
                    </div>
                </div>

            </form>

        </div>
    </div>
</div>

<button class="btn btn-neutral" data-toggle="modal" data-target="#myModal">
   Add Student
</button>


<style>

    .buttons-print {
        border: none !important;
        background-color: #51cbce !important;
    }

    .buttons-excel {
        border: none !important;
        background-color: #51cbce !important;
    }

    .buttons-pdf {
        border: none !important;
        background-color: #51cbce !important;
    }
</style>

<div style="width: 100%; " class="content">
    <div class="row">
        <div class="col-md-12">
            <div style="padding:2%;" class="card">
                <table class="table table-striped table-bordered" style=" width:100%;" id="userList">
                    <thead>
                        <tr>
                            <th style="color:#51cbce;">LRN</th>
                            <th style="color:#51cbce;">Full Name</th>
                            <th style="color:#51cbce;">Grade</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            foreach (var m in Model)
                            {
                                <tr>
                                    <td>@m.LRN</td>
                                    <td>@m.FirstName @m.MiddleName @m.LastName</td>
                                    <td>@m.CurrentGrade</td>
                                </tr>
                            }

                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>



<script>
    $('#studentnav').addClass('active');


    document.getElementById('studentRegistration').onsubmit = function () {

        var student = new FormData();

        var gender = "";
        if ($('#genderMale').is(':checked')) {
            gender = "male";
        } else {
            gender = "female";
        }

        var fileInput = document.getElementById('image');
        for (i = 0; i < fileInput.files.length; i++) {
            student.append("Image", fileInput.files[i]);
        }

        var lrn = $('#lrn').val();
        var fname = $('#fname').val();
        var mname = $('#mname').val();
        var password = $('#password').val();
        var rpassword = $('#rpassword').val();
        var lname = $('#lname').val();
        var address = $('#address').val();
        var bdate = $('#bdate').val();
        var grade = $('#grade').val();

        if (lrn == "" || fname == "" || mname == "" || lname == "" || address == "" || bdate == "" || grade == "" || password == "" || rpassword == "") {
            alert("Please complete the fields");
            return false;
        }


        student.append("LRN", lrn);
        student.append("FirstName", fname);
        student.append("Password", password);
        student.append("ConfirmPassword", rpassword);
        student.append("MiddleName", mname);
        student.append("LastName", lname);
        student.append("Address", address);
        student.append("BirthDate", bdate);
        student.append("CurrentGrade", grade);
        student.append("Gender", gender);
    
        var xhr = new XMLHttpRequest();
        xhr.open('POST', '/User/CreateStudent');
        xhr.send(student);

        xhr.onreadystatechange = function () {


            if (xhr.readyState == 4 && xhr.status == 200) {
                
                if (xhr.responseText == "") {
                    alert("student added");
                    window.open("../../User/Index", "_self");
                }
            }
        }

        return false;

    }

</script>


